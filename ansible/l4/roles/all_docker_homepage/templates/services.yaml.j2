---
# For configuration options and examples, please see:
# https://gethomepage.dev/configs/services/

- Home Lab Management:
    - Gilead:
        icon: truenas.png
        href: https://gilead.hosts.allanshomelab.com
        description: NAS (offsite backup)
        widget:
            type: truenas
            url: https://gilead.hosts.allanshomelab.com
            username: truenas_admin
            password: "{{ lookup('env', 'HOMEPAGE_VAR_TRUENAS_PASSWORD') }}"
    - Derry:
        icon: asustor.png
        href: https://derry.hosts.allanshomelab.com
        description: NAS (local backup)
    - Longhorn:
        icon: longhorn.png
        href: https://longhorn.k8s.allanshomelab.com
        description: Distributed k8s storage
    - Portainer:
        icon: portainer.png
        href: https://portainer.docker.allanshomelab.com
        description: Container management
        host: carrie
        container: portainer
    - Procyon:
        icon: truenas.png
        href: https://procyon.hosts.allanshomelab.com
        description: NAS
        widget:
            type: truenas
            url: https://procyon.hosts.allanshomelab.com
            username: truenas_admin
            password: "{{ lookup('env', 'HOMEPAGE_VAR_TRUENAS_PASSWORD') }}"
    - Shardik:
        icon: proxmox.png
        href: https://shardik.hosts.allanshomelab.com
        description: Hypervisor
        widget:
            type: proxmox
            url: https://shardik.hosts.allanshomelab.com
            username: "{{ lookup('env', 'HOMEPAGE_VAR_SHARDIK_USERNAME') }}"
            password: "{{ lookup('env', 'HOMEPAGE_VAR_SHARDIK_PASSWORD') }}"
            fields: ['vms', 'resources.cpu', 'resources.mem']
    - Sirius:
        icon: proxmox.png
        href: https://sirius.hosts.allanshomelab.com
        description: Hypervisor
        widget:
            type: proxmox
            url: https://sirius.hosts.allanshomelab.com
            username: "{{ lookup('env', 'HOMEPAGE_VAR_SIRIUS_USERNAME') }}"
            password: "{{ lookup('env', 'HOMEPAGE_VAR_SIRIUS_PASSWORD') }}"
            fields: ['vms', 'resources.cpu', 'resources.mem']

- Dev Ops:
    - Alertmanager:
        icon: alertmanager.png
        href: https://alerts.k8s.allanshomelab.com
        description: Monitoring system
    - Argo CD:
        icon: argo-cd.png
        href: "{{ lookup('env', 'HOMEPAGE_VAR_ARGO_CD_URL') }}"
        description: CD tool for Kubernetes
        widget:
            type: argocd
            url: "{{ lookup('env', 'HOMEPAGE_VAR_ARGO_CD_URL') }}"
            key: "{{ lookup('env', 'HOMEPAGE_VAR_ARGO_CD_KEY') }}"
            fields: ['apps', 'healthy', 'synced']
    - Gatus:
        icon: gatus.png
        href: https://gatus.docker.allanshomelab.com
        description: Health dashboard
        server: flagg
        container: gatus
        widget:
            type: gatus
            url: https://gatus.docker.allanshomelab.com
    - Grafana:
        icon: grafana.png
        href: https://grafana.allanshomelab.com
        description: Operational dashboards
        widget:
            type: grafana
            url: https://grafana.allanshomelab.com
            username: "{{ lookup('env', 'HOMEPAGE_VAR_GRAFANA_USERNAME') }}"
            password: "{{ lookup('env', 'HOMEPAGE_VAR_GRAFANA_PASSWORD') }}"
            fields: ['dashboards', 'datasources']
    - Healthchecks:
        icon: healthchecks.png
        href: https://healthchecks.io/projects/5f5c3869-90bf-4242-9174-76b5ecb3a357//checks/
        description: Job minitoring service
        widget:
            type: healthchecks
            url: https://healthchecks.io
            key: "{{ lookup('env', 'HOMEPAGE_VAR_HEALTHCHECKS_KEY') }}"
    - Prometheus:
        icon: prometheus.png
        href: https://prometheus.k8s.allanshomelab.com
        description: Monitoring/alerting toolkit
        widget:
            type: prometheus
            url: https://prometheus.k8s.allanshomelab.com
- Networking and Authentication:
    - Authentik (Docker):
        icon: authentik.png
        href: https://authn.allanshomelab.com
        description: Identity provider
        server: flagg
        container: authentik-server-1
        widget:
            type: authentik
            url: https://authn.allanshomelab.com
            key: "{{ lookup('env', 'HOMEPAGE_VAR_AUTHENTIK_KEY_DOCKER') }}"
            version: 2
    - Authentik (k8s):
        icon: authentik.png
        href: https://auth.allanshomelab.com
        description: Identity provider
        widget:
            type: authentik
            url: https://auth.allanshomelab.com
            key: "{{ lookup('env', 'HOMEPAGE_VAR_AUTHENTIK_KEY_K8S') }}"
            version: 2
    - Cloudflared:
        icon: cloudflare.png
        href: {{HOMEPAGE_VAR_CLOUDFLARE_URL}}
        description: Zero trust tunnel
        server: flagg
        container: cloudflare-cloudflared-1
        widget:
            type: cloudflared
            key: {{HOMEPAGE_VAR_CLOUDFLARE_KEY}}
            accountid: {{HOMEPAGE_VAR_CLOUDFLARE_ACCOUTNT_ID}}
            tunnelid: {{HOMEPAGE_VAR_CLOUDFLARE_TUNNEL_ID}}
