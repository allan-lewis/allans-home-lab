---
apiVersion: cert-manager.io/v1
kind: Certificate
metadata:
  name: certificate-production
  namespace: default
spec:
  secretName: production-tls
  issuerRef:
    name: letsencrypt-production
    kind: ClusterIssuer
  commonName: "{{ k3s_certmanager.common_name }}"
  dnsNames: "{{ k3s_certmanager.dns_names }}"
