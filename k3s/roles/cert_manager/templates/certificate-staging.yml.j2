kind: Certificate
metadata:
  name: certificate-staging
  namespace: default
spec:
  secretName: staging-tls
  issuerRef:
    name: letsencrypt-staging
    kind: ClusterIssuer
  commonName: "*.local.allanshomelab.com"
  dnsNames:
  - "local.allanshomelab.com"
  - "*.local.allanshomelab.com"