---
apiVersion: cert-manager.io/v1
kind: Certificate
metadata:
  name: {{ certificate_name }}
  namespace: default
spec:
  secretName: {{ secret_name }}
  issuerRef:
    name: {{ issuer_name }}
    kind: ClusterIssuer
  commonName: '{{ k3s_certmanager.common_name }}'
  dnsNames: {{ k3s_certmanager.dns_names }}
