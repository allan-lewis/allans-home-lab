apiVersion: v1
kind: ConfigMap
metadata:
  name:  {{ homepage_name }}
  namespace:  default
  labels:
    app.kubernetes.io/name: {{ homepage_name }}
data:
  kubernetes.yaml: |
    mode: cluster
  # settings.yaml: ""
  settings.yaml: |
    providers:
      longhorn:
        url: https://longhorn.local.allanshomelab.com
  bookmarks.yaml: |
{% for group in homepage_bookmark_groups | default([]) %}
    - {{ group.name }}:
{% for bookmark in group.bookmarks | default([]) %}
      - {{ bookmark.name }}:
        - abbr: {{ bookmark.abbr }}
          href: "{{ bookmark.href }}"
{% endfor %}
{% endfor %}
  services.yaml: |
    - My First Group:
        - My First Service:
            href: http://localhost/
            description: Homepage is awesome
            namespace: guacamole # The kubernetes namespace the app resides in
            app: guacamole # The name of the deployed app

    - My Second Group:
        - My Second Service:
            href: http://localhost/
            description: Homepage is the best
            namespace: pihole # The kubernetes namespace the app resides in
            app: pihole # The name of the deployed app

    - My Third Group:
        - My Third Service:
            href: http://localhost/
            description: Homepage is ðŸ˜Ž
            namespace: default # The kubernetes namespace the app resides in
            app: homepage # The name of the deployed app
  widgets.yaml: |
    - greeting:
        text_size: xl
        text: Allan's Home Lab
    - longhorn:
        # Show the expanded view
        expanded: true
        # Shows a node representing the aggregate values
        total: true
        # Shows the node names as labels
        labels: true
        # Show the nodes
        nodes: false
        # An explicit list of nodes to show. All are shown by default if "nodes" is true
        # include:
        #   - node1
        #   - node2
    - kubernetes:
        cluster:
          show: true
          cpu: true
          memory: true
          showLabel: true
          label: "cluster"
        nodes:
          show: false
          cpu: true
          memory: true
          showLabel: true
    - resources:
        backend: resources
        expanded: true
        cpu: true
        memory: true
    - search:
        provider: google
        target: _blank
    - datetime:
        text_size: xl
        format:
          dateStyle: full
          timeStyle: short
          hour12: false
  docker.yaml: ""