---
apiVersion: cert-manager.io/v1
kind: Certificate
metadata:
  name: {{ certificate_name }}
  namespace: default
spec:
  secretName: {{ secret_name }}
  issuerRef:
    name: {{ issuer_name }}
    kind: ClusterIssuer
  commonName: '{{ homelab_talos_cert_manager_common_name }}'
  dnsNames: {{ homelab_talos_cert_manager_dns_names }}
