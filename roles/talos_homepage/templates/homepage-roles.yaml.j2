apiVersion: rbac.authorization.k8s.io/v1
kind: ClusterRole
metadata:
  name: {{ homelab_talos_homepage_name }}
  labels:
    app.kubernetes.io/name: {{ homelab_talos_homepage_name }}
rules:
  - apiGroups:
      - ""
    resources:
      - namespaces
      - pods
      - nodes
    verbs:
      - get
      - list
  - apiGroups:
      - extensions
      - networking.k8s.io
    resources:
      - ingresses
    verbs:
      - get
      - list
  - apiGroups:
      - traefik.containo.us
    resources:
      - ingressroutes
    verbs:
      - get
      - list
  - apiGroups:
      - metrics.k8s.io
    resources:
      - nodes
      - pods
    verbs:
      - get
      - list
---
apiVersion: rbac.authorization.k8s.io/v1
kind: ClusterRoleBinding
metadata:
  name: {{ homelab_talos_homepage_name }}
  labels:
    app.kubernetes.io/name: {{ homelab_talos_homepage_name }}
roleRef:
  apiGroup: rbac.authorization.k8s.io
  kind: ClusterRole
  name: {{ homelab_talos_homepage_name }}
subjects:
  - kind: ServiceAccount
    name: {{ homelab_talos_homepage_name }}
    namespace: default
