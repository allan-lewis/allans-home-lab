---
apiVersion: v1
kind: Service
metadata:
  name: {{ service_name }}
  namespace: {{ namespace_name }}
spec:
  ipFamilyPolicy: SingleStack
  selector:
    app: {{ service_name }}
  ports:
    - port: {{ service_port }}
      targetPort: {{ target_port }}
  type: LoadBalancer
  loadBalancerIP: {{ service_load_balancer_ip }}
