---
apiVersion: traefik.io/v1alpha1
kind: IngressRoute
metadata:
  name: {{ homelab_kubernetes_ingress_name | default(homelab_kubernetes_service_name) }}
  namespace:  default
  annotations: 
    kubernetes.io/ingress.class: traefik-external
spec:
  entryPoints:
    - websecure
{% if homelab_talos_traefik_routes is defined and homelab_talos_traefik_routes | length > 0 %}
  routes:
{% for route in homelab_talos_traefik_routes %}
    - match: Host(`{{ route.host }}`)
      kind: Rule
      middlewares:
{% if route.authentik | default(false) %}
        - name: authentik
          namespace: default
{% endif %}
        - name: {{ homelab_talos_traefik_ingress_route_middleware_name }}
          namespace: {{ homelab_talos_traefik_ingress_route_middleware_namespace }}
      priority: 10
      services:
        - name: {{ route.service_name | default(homelab_kubernetes_service_name) }}
          namespace:  {{ homelab_kubernetes_namespace_name }}
          port: {{ route.service_port | default(homelab_kubernetes_service_port) }}
          scheme: {{ route.scheme | default('http') }}        
{% if route.authentik | default(false) %}
    - kind: Rule
      match: "Host(`{{ route.host }}`) && PathPrefix(`/outpost.goauthentik.io/`)"
      priority: 15
      services:
        - kind: Service
          # Or, to use an external Outpost, create an ExternalName service and reference that here.
          # See https://kubernetes.io/docs/concepts/services-networking/service/#externalname
          name: ak-outpost-authentik-embedded-outpost
          port: 9000
{% endif %}
{% endfor %}
{% else %}
  routes: []
{% endif %}
  tls:
    secretName: production-tls
